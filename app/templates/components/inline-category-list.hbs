{{#each this.categoriesSortedByAddonCount as |category|}}
  {{#comma-separated list=this.categoriesSortedByAddonCount item=category as |value separator|}}
    {{#link-to "categories.show" value.slug}}
      {{#if this.showWithoutParent}}
        {{value.name}}
      {{else}}
        {{#if value.parent}}
          {{value.parent.name}} >
        {{/if}}
        {{value.name}}
      {{~/if~}}
      {{#if this.showAddonCount}}
        ({{value.totalAddonCount}})
      {{~/if~}}
      {{separator}}
    {{/link-to}}
  {{/comma-separated}}
{{/each}}
